<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_16">

            <TextView
                android:id="@+id/vTvCountry"
                style="@style/BoldTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/by"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/vTvYear"
                style="@style/BoldTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="@string/_2012"
                android:textColor="@color/gray" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/vRvHolidays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark_white"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    </LinearLayout>

    <com.delivery.utils.view.BottomSheetLayoutWithBackground
        android:id="@+id/vBsSelectCountry"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:collapsedHeight="0dp">

        <include
            layout="@layout/view_bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom" />

    </com.delivery.utils.view.BottomSheetLayoutWithBackground>

    <com.delivery.utils.view.BottomSheetLayoutWithBackground
        android:id="@+id/vBsSelectYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:collapsedHeight="0dp">

        <include
            layout="@layout/view_year_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom" />

    </com.delivery.utils.view.BottomSheetLayoutWithBackground>

</FrameLayout>